<UserControl x:Class="FastMoneyBookmaker.View.MyBetsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FastMoneyBookmaker.View"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespsace:FastMoneyBookmaker.ViewModels" 
             xmlns:viewmodels="clr-namespace:FastMoneyBookmaker.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:BetViewModel}">

    <Grid>
        <DataGrid x:Name="MyBets" ItemsSource="{Binding Bets}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
            <DataGridTextColumn Header="{DynamicResource MyBets}" Binding="{Binding BetId}"/>
            <DataGridTextColumn Header="{DynamicResource DateOfBet}" Binding="{Binding DateOfBet}"/>
            <DataGridTextColumn Header="{DynamicResource Cash}" Binding="{Binding Cash}"/>
            <DataGridTextColumn Header="{DynamicResource StateOfBet}" Binding="{Binding State}"/>
            <DataGridTextColumn Header="{DynamicResource KindOfSport}" Binding="{Binding Match.KindOfSport}"/>
        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
